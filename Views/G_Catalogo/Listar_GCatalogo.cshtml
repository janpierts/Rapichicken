@model List<CatalogoModel>
@{
    ViewData["Title"] = "Listar_GCatalogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Gestionar Catalogo
  </div>
  <div class="card-body">
    <a asp-action="FGuardar_Catalogo" asp-controller="G_Catalogo" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
    <hr />
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Producto</th>
                <th>Descripcion</th>
                <th>Tipo producto</th>
                <th>Estado</th>
                <th>Stock</th>
                <th>Detalle unidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CatalogoId</td>
                        <td>@item.NProducto</td>
                        <td>@item.Descripcion</td>
                        <td>@item.TipoProducto</td>
                        <td>@item.EstadoProducto</td>
                        <td>@item.Stock</td>
                        <td>@item.DetalleUnidad</td>
                        <td>
                            <a asp-action="FEditar_Catalogo" asp-controller="G_Catalogo" class="btn btn-primary btn-sm" asp-route-I_ID="@item.CatalogoId">Editar</a>
                            <a asp-action="Editar_SCatalogo" asp-controller="G_Catalogo" class="btn btn-warning btn-sm" asp-route-I_ID="@item.CatalogoId">Stock</a>
                            <a asp-action="Eliminar_Catalogo" asp-controller="G_Catalogo" class="btn btn-danger btn-sm" asp-route-I_ID="@item.CatalogoId">Eliminar</a>
                        </td>
                    </tr>

                }
        </tbody>
    </table>
        

  </div>
</div>

