@model CatalogoModel
@{
    ViewData["Title"] = "Eliminar_Catalogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Eliminar Producto
    </div>
    <div class="card-body">


        <form asp-action="Eliminar_Catalogo" asp-controller="G_Catalogo" method="post">

            <input asp-for="CatalogoId" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el producto : @Html.DisplayTextFor(m => m.NProducto) ?
            </div>

            <button type="submit" class="btn btn-danger">Elimnar</button>
            <a asp-action="Listar_GCatalogo" asp-controller="G_Catalogo" class="btn btn-warning">Volver a la lista</a>
        </form>


    </div>
</div>

