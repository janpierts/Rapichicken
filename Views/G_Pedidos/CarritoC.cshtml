@model List<PedidosModel>
@{
    ViewData["Title"] = "Listar_Inventario";
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}

<div class="card">
  <div class="card-header">
    Carrito de compras
  </div>
  <div class="card-body">

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Producto</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
                <th>Nombre Cliente</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Pedidos_id</td>
                        <td>@item.N_Pedido</td>
                        <td>@item.D_Pedido</td>
                        <td>@item.Cantidad</td>
                        <td>@item.NP_C</td>
                        <td>
                        <a asp-action="Editar_SP" asp-controller="G_Pedidos" class="btn btn-warning btn-sm" asp-route-I_ID="@item.Pedidos_id">Cantidad</a>
						<a asp-action="Eliminar_Pedido" asp-controller="G_Pedidos" class="btn btn-danger btn-sm" asp-route-I_ID="@item.Pedidos_id">Eliminar</a>
                        </td>
                    </tr>

                }
        </tbody>
    </table>
        

  </div>
</div>
