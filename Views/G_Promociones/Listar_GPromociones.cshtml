@model List<PromocionesModel>
@{
    ViewData["Title"] = "Listar_GPromociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Gestionar Promociones
  </div>
  <div class="card-body">
    <a asp-action="FGuardar_Promociones" asp-controller="G_Promociones" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
    <hr />
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Producto</th>
                <th>Descripcion</th>
                <th>Tipo producto</th>
                <th>Estado</th>
                <th>Stock</th>
                <th>Detalle unidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PromocionesId</td>
                        <td>@item.NProducto</td>
                        <td>@item.Descripcion</td>
                        <td>@item.TipoProducto</td>
                        <td>@item.EstadoProducto</td>
                        <td>@item.Stock</td>
                        <td>@item.DetalleUnidad</td>
                        <td>
                            <a asp-action="FEditar_Promociones" asp-controller="G_Promociones" class="btn btn-primary btn-sm" asp-route-I_ID="@item.PromocionesId">Editar</a>
                            <a asp-action="Editar_SPromociones" asp-controller="G_Promociones" class="btn btn-warning btn-sm" asp-route-I_ID="@item.PromocionesId">Stock</a>
                            <a asp-action="Eliminar_Promociones" asp-controller="G_Promociones" class="btn btn-danger btn-sm" asp-route-I_ID="@item.PromocionesId">Eliminar</a>
                        </td>
                    </tr>

                }
        </tbody>
    </table>
        

  </div>
</div>

