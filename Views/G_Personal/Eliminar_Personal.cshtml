@model PersonalModel
@{
    ViewData["Title"] = "Eliminar_Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Eliminar Producto
    </div>
    <div class="card-body">


        <form asp-action="Eliminar_Personal" asp-controller="G_Personal" method="post">

            <input asp-for="PersonalId" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar al personal : @Html.DisplayTextFor(m => m.NPersonal)  @Html.DisplayTextFor(m => m.APersonal)?
            </div>

            <button type="submit" class="btn btn-danger">Elimnar</button>
            <a asp-action="Listar_Personal" asp-controller="G_Personal" class="btn btn-warning">Volver a la lista</a>
        </form>


    </div>
</div>

