@model List<PersonalModel>
@{
    ViewData["Title"] = "Listar_Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Gestionar Personal
  </div>
  <div class="card-body">
    <a asp-action="FGuardar_Personal" asp-controller="G_Personal" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
    <hr />
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Telefono/Cel</th>
                <th>Fecha de nacimiento</th>
                <th>DNI</th>
                <th>Direccion</th>
                <th>Sexo</th>
                <th>Rol</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PersonalId</td>
                        <td>@item.NPersonal</td>
                        <td>@item.APersonal</td>
                        <td>@item.PTel</td>
                        <td>@item.FN</td>
                        <td>@item.Dni</td>
                        <td>@item.Dir</td>
                        <td>@item.sex</td>
                        <td>@item.NRoles</td>
                        <td>
                            <a asp-action="FEditar_Personal" asp-controller="G_Personal" class="btn btn-primary btn-sm" asp-route-I_ID="@item.PersonalId">Editar</a>
                            <a asp-action="Eliminar_Personal" asp-controller="G_Personal" class="btn btn-danger btn-sm" asp-route-I_ID="@item.PersonalId">Eliminar</a>
                        </td>
                    </tr>

                }
        </tbody>
    </table>
        

  </div>
</div>

